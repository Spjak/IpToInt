{
  "name": "iptoint",
	"displayName": "IpToInt",
	"description": "Converts IPv4 addresses to integers and back",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:iptoint.intToIp",
		"onCommand:iptoint.ipToInt"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
            "command": "iptoint.ipToInt",
            "title": "IpToInt: Convert IP to Integer"
		},
		{
            "command": "iptoint.intToIp",
            "title": "IpToInt: Convert Integer to IP"
		}],
		"configuration": {
			"title": "IpToInt",
			"properties": {
				"iptoint.copyToClipboard": {
					"type": "boolean",
					"default": true,
					"description": "Automatically copy conversion results to clipboard"
				},
				"iptoint.endian": {
					"type": "string",
					"enum": ["bigendian", "smallendian"],
					"default": "smallendian",
					"description": "Specifies the endianness to use in conversion. Default is small endian"
				},
				"iptoint.sign": {
					"type": "string",
					"enum": ["signed", "unsigned"],
					"default": "signed",
					"description": "Specifies if the conversion uses signed or unsigned Int32"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }

}
